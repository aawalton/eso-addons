<GuiXml>
    <Controls>
        <TopLevelControl name="DynamicCPMildWarning" mouseEnabled="false" movable="false" hidden="true">
            <Dimensions x="740" y="140"/>
            <Anchor point="BOTTOM" relativeTo="DynamicCPWarning" relativePoint="TOP" offsetY="-10"/>
            <Controls>
                <Backdrop name="$(parent)Backdrop" centerColor="BB000000" edgeColor="BBFFDD00"><Edge edgeSize="2"/><AnchorFill/></Backdrop>
                <Button name="$(parent)Close" alpha="1" topmost="true">
                    <Textures normal="/esoui/art/hud/radialicon_cancel_up.dds" mouseOver="/esoui/art/hud/radialicon_cancel_over.dds" />
                    <Anchor point="TOPRIGHT" relativeTo="$(parent)" relativePoint="TOPRIGHT" offsetX="-2" offsetY="2" />
                    <Dimensions x="32" y="32" />
                    <OnClicked>
                        EVENT_MANAGER:UnregisterForUpdate(DynamicCP.name .. "MildWarning")
                        DynamicCPMildWarning:SetHidden(true)
                    </OnClicked>
                </Button>
                <Label name="$(parent)Label" font="ZoFontGame" color="FFDD00" verticalAlignment="CENTER" horizontalAlignment="CENTER" tier="HIGH" hidden="false" text="Warning: You have left the Champion Points screen with unsaved points and slottables.">
                    <Dimensions x="680" y="120"/>
                    <Anchor point="CENTER" relativeTo="$(parent)" relativePoint="CENTER"/>
                </Label>
            </Controls>
        </TopLevelControl>
<!-- ======================================================================================================================= -->
    </Controls>
</GuiXml>